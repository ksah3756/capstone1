<%- include('partials/header'); -%>

<form>
    <h2>Log in</h2>
    <label for="user_id">Id</label>
    <input type="text" name="user_id" required />
    <div class="user_id error"></div>
    <label for="password">Password</label>
    <input type="password" name="password" required />
    <div class="password error"></div>
    <button>Log in</button>
</form>

<script>
    const form = document.querySelector('form');
    const user_idError = document.querySelector('.user_id.error');
    const passwordError = document.querySelector('.password.error');

    form.addEventListener('submit', async (e)=>{
        e.preventDefault(); //default action(새로 고침 등)을 막음

        //reset errors
        user_idError.textContent = '';
        passwordError.textContent = '';

        // get the values
        const user_id = form.user_id.value;
        const password = form.password.value;

        // console.log(user_id, password); //id 비번 잘 나오는지 확인

        try{
            const res = await fetch('/login', {
                method: 'POST',
                body: JSON.stringify({ user_id, password }),  //ID와 비번을JSON화
                headers: { 'Content-Type': 'application/json' }
            });
            const data = await res.json();
            console.log(data);
            if( data.errors){
                user_idError.textContent = data.errors.user_id;
                passwordError.textContent = data.errors.password;
            }
            if(data.user){
                location.assign('/'); //무사히 로그인이 되었을 때, homepage로 redirect
            }
        }
        catch (err){
            console.log(err);
        }
    });
</script>
<%- include('partials/footer'); -%>